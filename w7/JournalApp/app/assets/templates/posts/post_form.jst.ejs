<content class="errors"></content>

<form>
  <label for="post-title">Post Title</label><br>

  <input
    id="post-title"
    type="text"
    name="post[title]"
    value="<%= post.escape('title') %>"
  > <br><br>

  <label for="post-body">Post Body</label>
  <br>
  <textarea id="post-body" name="post[body]"><%= post.escape('body') %></textarea>

  <br>
  <input type="submit" value="<%= buttonMessage %>">
</form>
